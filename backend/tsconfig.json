{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public",
    "types": ["node"]
  },
  "include": ["src/**/*", "index.ts", "types.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
