{
  "compilerOptions": {
    "target": "ES2021", // Target ECMAScript version (or lower) supported by Node.js
    "module": "commonjs", // Use CommonJS modules
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allows interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistency in file names
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of TypeScript source files
    "resolveJsonModule": true, // Allow importing JSON files
    "declaration": true, // Generate corresponding .d.ts file
    "sourceMap": true, // Generate source maps for debugging
    "inlineSources": true, // Include source code in source maps
    "removeComments": true, // Remove comments from TypeScript output
    "strictNullChecks": true, // Enable strict null checks
    "typeRoots": ["./node_modules/@types", "./custom_types"], // Specify where to find type definitions
    "types": ["node"] // Include Node.js types
  },
  "include": ["src/**/*.ts"], // Specify files to be included in compilation
  "exclude": ["node_modules", "dist"] // Specify files to be excluded from compilation
}
